<Window x:Class="WPF_11C_Check_Box.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_11C_Check_Box"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Label FontWeight="Bold">Pizza Toppings</Label>
        <CheckBox Name="cbAllToppings" IsThreeState="True" Checked="cbAllCheckedChanged" Unchecked="cbAllCheckedChanged">Add all</CheckBox>
        <StackPanel Margin="10">
            <CheckBox Name="cbHam" Checked="cbSingleCheckChanged" Unchecked="cbSingleCheckChanged">
                <TextBlock>
                    Ham <Run Foreground="Red" FontWeight="Bold">Juicy</Run>
                </TextBlock>
            </CheckBox>
            <CheckBox Name="cbBacon" Checked="cbSingleCheckChanged" Unchecked="cbSingleCheckChanged">Bacon</CheckBox>
            <CheckBox Name="cbPineapple" Checked="cbSingleCheckChanged" Unchecked="cbSingleCheckChanged">Pinapple</CheckBox>
            <CheckBox Name="cbMotzerella" Checked="cbSingleCheckChanged" Unchecked="cbSingleCheckChanged">Motzeerella</CheckBox>
        </StackPanel>
        
    </StackPanel>
</Window>
